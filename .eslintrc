{
	"extends": "eslint:recommended",
	"parser": "babel-eslint",
	"env": {
		"es6": true,
		"node": true
	},
	"plugins": [
		"babel"
	],
	"rules": {
		"eol-last": [
			"error",
			"always"
		],
		"indent": [
			"error",
			"tab"
		],
		"quotes": [
			"error",
			"single"
		],
		"no-empty": [
			"error"
		],
		"no-debugger": [
			"error"
		],
		"semi": [
			"error",
			"always"
		],
		"no-console": "off",
		"no-extra-boolean-cast": "off",
		"no-mixed-spaces-and-tabs": [
			"error",
			"smart-tabs"
		],
		"no-multiple-empty-lines": "error",
		"no-trailing-spaces": [
			"error"
		],
		"no-unused-vars": [
			"warn",
			{
				"args": "after-used"
			}
		],
		"no-var": "error"
	}
}
